  "usage_instructions": {
    "slide_generation_flow": [
      "1. Always start with cover_slide template",
      "2. For each approved step in stepHistory:",
      "   - If step is 'brand-positioning', use content_slide_mission_vision",
      "   - Otherwise, use content_slide_standard",
      "3. End with closing_slide template",
      "4. Replace all {{PLACEHOLDER}} values with actual data",
      "5. Apply overflow rules if content exceeds max_chars"
    ],
    "content_extraction": {
