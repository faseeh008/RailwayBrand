      "truncate": {
        "description": "Cut off text at boundary and add ellipsis",
        "add_ellipsis": true
      },
      "shrink_font": {
        "description": "Reduce font size to fit content",
        "min_font_size": 12.0,
        "shrink_increment": 2.0
      },
      "create_new_slide": {
        "description": "Split content across multiple slides using same template",
        "continuation_indicator": true,
        "continuation_text": "(continued)",
        "max_slides_per_content": 3
      }
    }
  },
